{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "shell:allow-open",
    "http:default",
    {
      "identifier": "http:allow-fetch",
      "allow": [
        { "url": "https://kurly0521.atlassian.net/**" }
      ]
    },
    {
      "identifier": "http:allow-fetch-send",
      "allow": [
        { "url": "https://kurly0521.atlassian.net/**" }
      ]
    },
    "http:allow-fetch-read-body"
  ]
}