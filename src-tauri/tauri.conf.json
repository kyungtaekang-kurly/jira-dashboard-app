{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Kurly Jira",
  "version": "0.5.1",
  "identifier": "com.kurly.jiradashboardapp",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Kurly Jira",
        "width": 1280,
        "height": 900
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDczQzM4OEQ2NTNFQkMwNzgKUldSNHdPdFQxb2pEY3dYU3JiV0svdE5URlhvTFoxQTZhK2p6eHViZVhTRlRENWs1K0ZYSmVka0YK",
      "endpoints": [
        "https://github.com/kyungtaekang-kurly/jira-dashboard-app/releases/latest/download/latest.json"
      ]
    }
  }
}
